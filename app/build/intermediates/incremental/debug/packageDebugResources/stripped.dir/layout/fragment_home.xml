<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@color/light_green">

    <ImageView
        android:id="@+id/imageViewShroomy"
        android:layout_width="283dp"
        android:layout_height="266dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.89"
        app:srcCompat="@drawable/shroomygreencapclearbg"
        tools:targetApi="p" />


    <TextView
        android:id="@+id/textViewCurrentUser"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:text="@string/current_user"
        android:fontFamily="casual"
        android:textAlignment="center"
        android:background="@color/mint"
        android:textColor="@color/black"
        android:layout_marginTop="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="411dp"
        android:layout_height="672dp"
        android:elevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewSpeechBubbleHome"
            android:layout_width="match_parent"
            android:layout_height="555dp"
            android:elevation="15dp"
            android:layout_alignBottom="@+id/imageViewShroomy"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="92dp"
            android:layout_marginTop="272dp"
            android:layout_marginEnd="-92dp"
            android:layout_marginBottom="-143dp"
            app:srcCompat="@drawable/speech_bubble"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/textViewHomeSpeech"
            android:layout_width="wrap_content"
            android:layout_height="67dp"
            android:elevation="15dp"
            android:layout_alignStart="@+id/imageViewSpeechBubbleHome"
            android:layout_alignTop="@+id/imageViewSpeechBubbleHome"
            android:layout_alignEnd="@+id/imageViewSpeechBubbleHome"
            android:layout_alignBottom="@+id/imageViewSpeechBubbleHome"
            android:layout_marginStart="134dp"
            android:layout_marginTop="239dp"
            android:layout_marginEnd="117dp"
            android:layout_marginBottom="236dp"
            android:fontFamily="casual"
            android:text="@string/welcome_to_zenbuddy"

            android:textColor="@color/black"
            android:textSize="18sp" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>